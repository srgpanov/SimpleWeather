<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:textColor">@color/primary_text</item>


        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="searchViewStyle">@style/AppSearchViewStyle</item>

        <!--        прозрачный стаус бар и навигэйшн бар c выбором цвета-->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--        <item name="android:navigationBarColor">#DC000000</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>


    <style name="AnimationPopupBottom">
        <item name="android:windowEnterAnimation">@anim/popup_top</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="AnimationPopupTop">
        <item name="android:windowEnterAnimation">@anim/popup_bottom</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
<!--        <item name="closeIcon">@null</item>-->
        <item name="actionLayout">@layout/favorite_search_view</item>

<!--        <item name="closeIcon">@drawable/mock_icon</item>-->
        <item name="queryHint">@string/search_hint</item>
    </style>

    <style name="match_constrained">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="forecast_secondary_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="forecast_secondary_small_tv" parent="forecast_secondary_tv">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="forecast_primary_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="forecast_cloudness_iv">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="forecast_feels_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="forecast_header_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wind_direction_icon">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:tint">@color/secondary_text</item>
    </style>

    <style name="forecat_header_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="forecast_split_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/secondary_text</item>
    </style>


</resources>
